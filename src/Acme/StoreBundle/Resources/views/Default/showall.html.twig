{%  extends '::base.html.twig' %}

{% block body %}
	{% for prod in products %}
		{% if prod.id %}
		<div class="product">
			<p>ID: {{ prod.id }}</p>
			<p>Name: {{ prod.name }}</p>
			<p>Price: {{ prod.price }}</p>
			<p>Description: {{ prod.description }}</p>
		</div>
		{% else %}
			<p>No product found with id: {{ id }}</p>
		{% endif %}
	{% endfor %}
{% endblock %}