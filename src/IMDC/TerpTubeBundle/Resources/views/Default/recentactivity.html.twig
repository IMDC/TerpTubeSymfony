{% extends "IMDCTerpTubeBundle:Default:basetemplate.html.twig" %}
{% block flashmessages %}
	{% for type, messages in app.session.flashbag.all() %}
	<div class="row-fluid">
	    <div class="span9">
		{% for key, message in messages %}
		    {% if type=='info' %}
    		    <div class="flash-{{ type }} text-info">
            {% elseif type=='error' %}
                <div class="flash-{{ type }} text-error">
            {% elseif type=='success' %}
                <div class="flash-{{ type }} text-success">
            {% else %}
                <div class="flash-{{ type }} text-warning">
		    {% endif %}
       		        {{ message|trans }}
                </div>
      	{% endfor %}
      	</div>
  	</div>
   	{% endfor %}
{% endblock flashmessages %}

{% block herounit %}
<h1>Welcome to TerpTube</h1>
{% endblock herounit %}


{% block underherounitrow1 %}
{% if posts|length > 0 %}
	<div class="row-fluid">
	<h3>Recent Posts</h3>
	{% include 'IMDCTerpTubeBundle:Post:postthumbnail.html.twig' %}
	</div>
{% endif %}
{% endblock underherounitrow1 %}
{% block underherounitrow2 %}
{% if threads|length > 0 %}
	<div class="row-fluid">
	<h3>Recent Forum Posts</h3>
	{% include 'IMDCTerpTubeBundle:Thread:threadthumbnail.html.twig' %}
	</div>
{% endif %}
{% endblock underherounitrow2 %}