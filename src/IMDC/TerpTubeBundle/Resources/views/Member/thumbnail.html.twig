{% trans_default_domain 'IMDCTerpTubeBundle' %}

{% if isSelection is not defined %}
    {% set isSelection = false %}
{% endif %}

{% for member in members %}
    {% if loop.index % 4 == 1 %}
        <div class="row">
            <ul class="list-unstyled">
    {% endif %}
    <li>
        <div class="col-md-3">
            <div class="thumbnail text-center">
                <div class="row">
                    <div class="col-md-4">
                        {% include 'IMDCTerpTubeBundle:Member:avatar.html.twig' %}
                    </div>
                    <div class="col-md-8">
                        <h3>{% include 'IMDCTerpTubeBundle:Member:username.html.twig' %}</h3>
                        <ul class="list-unstyled">
                            <li class="text-muted"><strong>{{ 'member.infoBlock.joined'|trans }}:</strong> {{ member.joinDate|date('M j Y') }}</li>
                            <li class="text-muted"><strong>{{ 'member.infoBlock.postCount'|trans }}:</strong> {{ member.postCount }}</li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="margin-top: 10px; margin-bottom: 10px">
                        <div class="user-container-select" style="{% if isSelection %}display: none;{% endif %}">
                            {% include 'IMDCTerpTubeBundle:Member:connectTools.html.twig' with {'faSize': 'fa-2x'} %}
                        </div>
                        <div class="user-container-select" style="{% if not isSelection %}display: none;{% endif %}">
                            <button class="btn btn-default user-select" data-toggle="button" data-select="Select" data-selected="Selected" data-uid="{{ member.id }}"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </li>
    {% if loop.index % 4 == 0 or loop.last %}
            </ul>
        </div>
    {% endif %}
{% endfor %}
