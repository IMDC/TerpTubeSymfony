{% if enableVideoControls is not defined %}
    {% set enableVideoControls = true %}
{% endif %}

{% if enableAudioControls is not defined %}
    {% set enableAudioControls = true %}
{% endif %}

{# mediatype 0 = image 1 = video 2 = audio 9 = other #}
{% if mediaFile.type == 0 %}
	{% block mediaimagetype %}
		<img class="img-responsive center-block tt-media-img" src="{{ asset(mediaFile.getResource.getWebPath) }}" />
	{% endblock mediaimagetype %}
{% elseif mediaFile.type == 1 %}
	{% block mediavideotype %}
		<video class="tt-media-video" id="{{ mediaFile.getID }}" {% if enableVideoControls %}controls{% endif %} preload="auto">
			<source src="{{ asset(mediaFile.getResource.getWebPathWebm) }}"/>
			<source src="{{ asset(mediaFile.getResource.getWebPath) }}"/>
		</video>
	{% endblock mediavideotype %}
{% elseif mediaFile.type == 2 %}
	{% block mediaaudiotype %}
		<audio class="tt-media-audio" {% if enableAudioControls %}controls{% endif %}>
			<source src="{{ asset(mediaFile.getResource.getWebPath) }}" />
			Your browser does not support the audio element, please upgrade to Google Chrome
		</audio>
	{% endblock mediaaudiotype %}
{% endif %}
