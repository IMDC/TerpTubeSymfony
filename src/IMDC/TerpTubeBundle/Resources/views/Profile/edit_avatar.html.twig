{% extends "IMDCTerpTubeBundle:Default:index.html.twig" %}

{% trans_default_domain 'IMDCTerpTubeBundle' %}

{% block herounit %}
	<h1>{{ 'profile.edit.avatar.title'|trans }}</h1>
{% endblock herounit %}

{% block underherounitrow1 %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6">
				<form action="{{ path('imdc_profile_edit_avatar', {'userName': app.user.username}) }}" {{ form_enctype(form) }} method="POST" >
				    {{ form_widget(form) }}
			
				    <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.avatar.submit'|trans }}" />
				    <input type="button" class="btn btn-default" value="{{ 'profile.edit.avatar.cancel'|trans }}" onClick="parent.location='{{ path('imdc_profile_me') }}'" />
				</form>
			</div>
		</div>
	</div>
{% endblock underherounitrow1 %}
