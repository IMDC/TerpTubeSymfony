{% extends "IMDCTerpTubeBundle:Default:basetemplate.html.twig" %}
{% trans_default_domain 'IMDCTerpTubeBundle' %}
{% block title %}{{ app.user }}'s Friends{% endblock title %}

{% block nav_ul_authenticated_my_friends %}<li class="active">{% endblock %}

{% block herounit %}
<h1>{{ app.user }}'s Friends</h1>
{% endblock herounit %}

{% block underherounitrow1 %}
<ul class="thumbnails">
    {% for friend in friends %}
    {% set profile = friend.getProfile %}
    <li class="span3">
        <div class="thumbnail text-center">
            <a href="{{ path('imdc_terp_tube_user_profile_specific', {'userName' : friend.userName}) }}"><img class="avatar" alt="avatar" src="{{ profile.avatar ? asset(profile.avatar.getResource.getWebPath):asset('bundles/imdcterptube/img/no_avatar.jpg')}}" alt="" width="96px" /></a>
            <h3>{{ friend.username }}</h3>
            <p>Joined: {{ friend.joinDate|date('g:ia F j Y') }}</p>
            <p>
                <a class="btn btn-primary" href="{{ path('imdc_terp_tube_user_profile_specific', {'userName' : friend.userName}) }}">View Profile</a>
                <a class="btn" href="{{ path('imdc_remove_from_friends_list', {'userid' : friend.id, 'redirect' : 'imdc_friends_list_show_all'} ) }}">Remove from Friend's list</a>
            </p>
        </a>
    </li>
{% endfor %}
</ul>
{% endblock underherounitrow1 %}
{% block underherounitrow2 %}
{% endblock underherounitrow2 %}