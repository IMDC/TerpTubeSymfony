{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Permissions</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Publicaccess</th>
                <td>{{ entity.publicAccess }}</td>
            </tr>
            <tr>
                <th>Userswithlink</th>
                <td>{{ entity.usersWithLink }}</td>
            </tr>
            <tr>
                <th>Privateaccess</th>
                <td>{{ entity.privateAccess }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('permissions') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('permissions_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
