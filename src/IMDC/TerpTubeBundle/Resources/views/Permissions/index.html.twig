{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Permissions list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Access level</th>
                <th>Users with Access</th>
                <th>Groups with Access</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('permissions_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.accessLevel }}</td>
                <td>
                {% for users in entity.usersWithAccess %}
                    {{ usersWithAccess.getUsername|join(', ') }}
                {% endfor %}
                </td>
                <td>
                {% for usergroups in entity.userGroupsWithAccess %}
                    {{ userGroupsWithAccess.getTitle|join(', ') }}
                {% endfor %}
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('permissions_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('permissions_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('permissions_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
