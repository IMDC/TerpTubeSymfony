{% extends 'IMDCTerpTubeBundle:Base:base.html.twig' %}

{% block title %}Create a new Forum{% endblock title %}

{% block header %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            require(['main'], function() {
                var forum = new $tt.Controller.Forum({page: $tt.Controller.Forum.Page.NEW});
                forum.bindUIEvents();
            });
        });
    </script>
{% endblock header %}

{% block sidebarlinks_pages %}class="active"{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <img class="img-responsive center-block" src="" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <p>Add a media file (audio, video, image) to this forum:</p>
                {% include 'IMDCTerpTubeBundle:Media:chooserForm.html.twig' %}
                {{ form_row(form.titleText) }}
                {{ form_row(form.accessType) }}
                {{ form_row(form.group) }}
                <button class="btn btn-success"><i class="fa fa-check"></i> Create</button>
                <a class="btn btn-danger" href="{{ path('imdc_forum_list') }}"><i class="fa fa-times"></i> Cancel</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}

{% block outside_body %}
    {{ parent() }}

    {% include 'IMDCTerpTubeBundle:Media:uploadForms.html.twig' %}
{% endblock outside_body %}
