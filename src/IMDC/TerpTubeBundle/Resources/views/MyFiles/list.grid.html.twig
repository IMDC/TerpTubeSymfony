{% trans_default_domain 'IMDCTerpTubeBundle' %}

{% import 'IMDCTerpTubeBundle:Media:macros.html.twig' as media %}

<div class="text-center">
    {{ knp_pagination_render(resourceFiles) }}
</div>
{{ media.controls('grid') }}
<div class="row my-files-selector-files-list" style="margin-top: 15px;">
    {% if resourceFiles|length > 0 %}
        {% for resourceFile in resourceFiles %}
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-5">
                <div class="thumbnail" style="height: 225px; cursor: pointer;">
                    <div style="height: 175px; margin-bottom: 5px; position: relative;white-space: nowrap;">
                        <input type="checkbox" style="-webkit-appearance: none; width: 16px; height: 16px; border: 1px solid #ccc; position: absolute; right: 0; margin: 4px;" data-mid="{{ resourceFile.id }}" />
                        {{ media.thumbnail(resourceFile.thumbnailPath) }}
                        <span style="vertical-align: middle; display: inline-block; height: 100%;"></span>
                    </div>
                    <div style="height: 35px; line-height: 35px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        <span class="edit-title" title="{{ 'filesGateway.previewLink'|trans }}" data-type="text" data-val="{{ resourceFile.id }}" data-title="{{ 'form.media.title'|trans }}">
                            {{ media.typeToIcon(resourceFile.type) }}{{ resourceFile.title }}
                        </span>
                        <span style="position: relative; float: right;">
                            <span class="css-hover" style="display: none; position: absolute; right: 0px; top: -1px;">
                                <button class="btn btn-default edit-title"><i class="fa fa-pencil"></i></button>
                                <a class="btn btn-default" target="_blank" href="{{ path('imdc_thread_new_from_media', {'mediaId': resourceFile.id} ) }}" title="{{ 'filesGateway.shareLink'|trans }}"><i class="fa fa-share-square-o"></i></a>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="text-center">{{ 'filesGateway.noFiles'|trans }}</div>
    {% endif %}
</div>
{{ media.controls('grid') }}
<div class="text-center">
    {{ knp_pagination_render(resourceFiles) }}
</div>
