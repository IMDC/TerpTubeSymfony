{% extends "IMDCTerpTubeBundle:Default:basetemplate.html.twig" %}

{% block stylesheets %}
    {{  parent() }}
    
    <link href="{{ asset('bundles/imdcterptube/css/inbox.css') }}" rel="stylesheet" />
{% endblock stylesheets %}

{% block title %}
Inbox
{% endblock title %}

{% block herounit %}
    <h1>Inbox</h1>
    <h2>Your messages appear below:</h2>
{% endblock herounit %}
{% block underherounitrow1 %}
    {% if app.session.flashbag.get('inbox') is defined %}
        {% for flashMessage in app.session.flashbag.get('inbox') %}
        <div class="flash-notice">
            <h4>{{ flashMessage }}</h4>
        </div>
        {% endfor %}
    {% endif %}
    {% block inboxlist %}
    {{ include('IMDCTerpTubeBundle:Message:inboxlist.html.twig') }}
    {% endblock inboxlist %}
    <h2>Private Messages</h2>
    <div class="row-fluid">
        <div class="span3">
            <a href="{{ path('imdc_message_create') }}">Create new message</a>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span-9">
            <table class="messagetable pmtable">
                <tr><th>Tools</th><th>Read</th><th>From</th><th>Subject</th><th>Content</th><th>Sent</th></tr>
                {% if messages %}
                    {% for message in messages %}
                    {% set msgread = false %}
                    {% if message.getTempRead() %}
                        {% set msgread = true %}
                    <tr class="tr-message message-read" onclick="goToPrivateMessage('{{ path('imdc_message_view_message', {'messageid': message.id}) }}');">
                    {% else %}
                    <tr class="tr-message message-unread" onclick="goToPrivateMessage('{{ path('imdc_message_view_message', {'messageid': message.id}) }}');">
                    {% endif %}
                        <td><a href="{{ path('imdc_message_delete', {'messageid': message.id}) }}" data-val="{{ message.id }}"><img class="icon-remove" />Delete</a></td>
                        <td>{%  if msgread %}
                                <img src="{{ asset('img/user_notification_icon_message.jpg') }}" />Read
                            {%  else %}
                                <img src="{{ asset('img/user_notification_icon_message_on.jpg') }}" />Unread
                            {%  endif %}
                        </td>
                        <td><a href="{{ path('imdc_terp_tube_user_profile_specific',{'userName' : message.owner}) }}">{{ message.owner }}</a></td>
                        <td><a href="{{ path('imdc_message_view_message', {'messageid': message.id}) }}">{{ message.subject }}</a></td>
                        <td><a href="{{ path('imdc_message_view_message', {'messageid': message.id}) }}">{{ message.content|truncate(50) }}</a></td>
                        <td>{{ message.sentDate|date('g:ia M j') }}</td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>No messages yet</tr>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock underherounitrow1 %}
{% block underherounitrow2 %}
    <h2>Notifications</h2>
    <table>
        <th>Message</th>
        {% if notifications is defined %}
            {% for notification in notifications %}
                <tr><td>{{ notification.message }}</td></tr>
            {% endfor %}
        {% else %}
            <tr><td>No notifications</td></tr>
        {% endif %}
    </table>
{% endblock underherounitrow2 %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/imdcterptube/js/inbox.js') }}"></script>
{% endblock javascripts %}