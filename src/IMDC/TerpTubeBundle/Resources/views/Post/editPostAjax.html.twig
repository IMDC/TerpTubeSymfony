{% if post.attachedFile[0] is defined %}
    {% set mediaFile = post.attachedFile[0] %}
{% else %}
    {% set mediaFile = none %}
{% endif %}

<div class="span12">
{# set formpath = path(app.request.attributes.get("_route"), {'pid' : post.id}) #}
{% set formpath = path('imdc_post_edit_specific', {'pid' : post.id}) %}

{{ form_start(form, {'action' : "#{formpath}"}) }}
    {{ form_errors(form) }}
    <div class="controls controls-row">
        <a class="btn btn-primary" id="selectFiles" href="#"><i class="fa fa-cloud-upload"></i> Select Files</a>
        {{ form_widget(form.mediatextarea) }}{{ form_errors(form.mediatextarea) }}
    </div>
    <div id="files"></div>
    {% if mediaFile != null %}
    <p>
    <div class="row-fluid">
        <div class="span4">
        {{ include('IMDCTerpTubeBundle:Media:mediaElement.html.twig') }}
        </div> <!-- /span4 -->
    </div> <!-- /row-fluid -->
    </p>
    {% else %}
    {% endif %}
    {% if form.startTime is defined %}
    <div id="start-end-time-wrap">
        <div class="row-fluid">
            <div class="span6">
                {{form_label(form.startTime)}}{{ form_widget(form.startTime) }}
            </div>
            <div class="span6">
                {{form_label(form.endTime)}}{{ form_widget(form.endTime) }}
            </div>
        </div>
    </div>
    {% endif %}
    {{ form_row(form.content, {'attr': {'style':'width:90%'}}) }}
    <div class="controls controls-row">
        {{ form_widget(form.submit, {'attr': {'class':'input-medium btn btn-success'}}) }}
        <a href="{{ path('imdc_thread_view_specific', {'threadid':post.getParentThread.getId}) }}" class="btn btn-danger"><i class="fa fa-times"></i> Cancel</a>
    </div>

{{ form_end(form) }}
</div>
