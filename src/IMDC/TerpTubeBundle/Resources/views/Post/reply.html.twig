{% set isPostReply = post.parentPost is defined ? post.parentPost is empty : false %}

<div class="row post-container{% if isPostReply %} tt-post-container tt-post-reply-container" style="margin-bottom: 15px;{% endif %}" data-pid="{{ newPost.id }}">
    <div class="{% if isPostReply %}col-md-offset-1 col-md-11{% else %}col-md-12{% endif %}">
        {% if isPostReply %}
        <div class="row tt-post-container-inner tt-post-reply-container-inner">
            <div class="col-md-12">
        {% endif %}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_widget(form.attachedFile) }}
                {% if form.startTime is defined %}
                    {{ form_widget(form.startTime) }}
                    {{ form_widget(form.endTime) }}
                {% endif %}
                {{ form_row(form.content) }}
                <a class="btn btn-success post-submit-new" href="#" data-pid="{{ newPost.id }}" data-loading-text="Creating reply..."><i class="fa fa-check"></i> Reply</a>
                <a class="btn btn-danger post-reset" href="#" data-pid="{{ newPost.id }}"><i class="fa fa-times"></i> Reset</a>
                {% if isPostReply %}
                    <a class="btn btn-danger post-cancel-new" href="#" data-pid="{{ newPost.id }}"><i class="fa fa-times"></i> Cancel</a>
                {% endif %}
                {{ form_end(form) }}
        {% if isPostReply %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
