{% macro listUsers(style, users) %}
    {% import _self as _group %}

    <div class="text-center">{{ knp_pagination_render(users) }}</div>
    {% if style == 'list' %}
        {{ _group.listUsersList(users) }}
    {% else %}
        {{ _group.listUsersGrid(users) }}
    {% endif %}
    <div class="text-center">{{ knp_pagination_render(users) }}</div>
{% endmacro %}

{% macro listUsersList(users) %}
    <div class="table-responsive">
        <table class="table table-hover tt-list-table">
            <thead>
            <tr>
                <th><input type="checkbox" /></th>
                <th>Username</th>
                <th>Posts</th>
                <th>Joined</th>
            </tr>
            </thead>
            <tbody>
            {% if users|length > 0 %}
                {% for user in users %}
                    {% set isMe = user == app.user %}
                    <tr>
                        <td><input type="checkbox" data-uid="{{ user.id }}" {% if isMe %}disabled{% endif %} /></td>
                        <td>
                            <span>{% include 'IMDCTerpTubeBundle:Member:username.html.twig' with {'member': user} %}{% if isMe %} <strong>(me)</strong>{% endif %}</span>
                            <span>{% include 'IMDCTerpTubeBundle:Member:connectTools.html.twig' with {'member': user} %}</span>
                        </td>
                        <td>{{ user.postCount }}</td>
                        <td>{{ time_diff(user.joinDate) }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr colspan="4">
                    <div class="text-center">No group members</div>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endmacro %}

