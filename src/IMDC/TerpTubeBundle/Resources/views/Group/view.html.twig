{% extends 'IMDCTerpTubeBundle:Base:base.html.twig' %}

{% block title %}{{ group.name }}{% endblock title %}

{% block header %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            require(['main'], function() {
                var group = new $tt.Controller.Group({page: $tt.Controller.Group.Page.VIEW});
                group.bindUIEvents();
            });
        });
    </script>
{% endblock header %}

{% block sidebarlinks_groups %}class="active"{% endblock %}

{% block content %}
    <div class="col-md-offset-1 col-md-10">
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-md-6">
                {% if group.openForNewMembers and group not in app.user.getUserGroups %}
                    <a class="btn btn-default" href="{{ path('imdc_group_join', {'usergroupid': group.id}) }}"><i class="fa fa-plus-circle"></i> Join Group</a>
                {% endif %}
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-default" href="{{ path('imdc_group_message', {'groupId': group.id}) }}"><i class="fa fa-plus-circle"></i> Send a Group Message</a>
                {% if app.user == group.userFounder %}
                    <a class="btn btn-default group-toggle-member-select" href="#" data-toggle="button"><i class="fa fa-wrench"></i> Manage Members</a>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle group-action" data-toggle="dropdown">Action <span class="caret"></span></button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('imdc_group_edit', {'usergroupid': group.id}) }}"><i class="fa fa-edit"></i> Edit Group</a></li>
                            <li><a href="{{ path('imdc_group_delete', {'usergroupid': group.id}) }}"><i class="fa fa-times"></i> Delete Group</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('imdc_group_add_members', {'groupId': group.id}) }}"><i class="fa fa-plus"></i> Add Members</a></li>
                            <li class="disabled"><a href="#" id="deleteSelected" data-loading-text="Deleting members..."><i class="fa fa-minus"></i> Delete Selected</a></li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="row group-container-media">
            <div class="col-md-12">
                {% if group.media[0] is defined %}
                    {% include 'IMDCTerpTubeBundle:Media:element.html.twig' with {'mediaFile': group.media[0]} %}
                {% else %}
                    <p>No media</p>
                {% endif %}
            </div>
        </div>
        <div class="row group-container-info">
            <div class="col-md-12">
                <h1>{{ group.name }}</h1>
                <div class="row">
                    <div class="col-xs-3">
                        <table class="table" style="width: 0;">
                            <tbody>
                                <tr>
                                    <td>Members</td>
                                    <td>{{ group.members|length }}</td>
                                </tr>
                                <tr>
                                    <td>Created</td>
                                    <td>{{ group.dateCreated|date('g:ia F j Y') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-xs-9" style="border-left: 1px solid #dddddd;">
                        {% if group.description %}
                            <p>{{ group.description }}</p>
                        {% endif %}
                    </div>
                </div>
                {% if app.user is not null and group in app.user.getUserGroups %}
                    <p><span class="label label-info">You are currently a member of this group</span></p>
                {% endif %}
            </div>
        </div>
        <!-- group forums -->
        <div class="group-container-forums">
            {% include 'IMDCTerpTubeBundle:Forum:list.html.twig' %}
        </div>
        <!-- group members -->
        <div class="row">
            <div class="col-md-12">
                <img class="img-responsive center-block" src="" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <hr class="tt-separator-top" />
                {% if group.members|length > 0 %}
                    {% include 'IMDCTerpTubeBundle:Member:thumbnail.html.twig' with {'members': group.members} %}
                {% else %}
                    <p class="text-center" style="margin-bottom: 20px;">No members</p>
                {% endif %}
                <hr class="tt-separator-bottom" />
            </div>
        </div>
    </div>
{% endblock content %}

{% block outside_body %}
    {{ parent() }}

    {% if form is defined %}
        <div id="selectedUsersForm" style="display: none;">
            {{ form_start(form) }}
            <div class="selected-users" data-prototype="{{ form_widget(form.users.vars.prototype)|e }}"></div>
            {{ form_end(form) }}
        </div>
    {% endif %}
{% endblock outside_body %}
