{% extends 'IMDCTerpTubeBundle:Base:base.html.twig' %}

{% block title %}Edit Group{% endblock title %}

{% block header %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            require(['main'], function() {
                var group = new $tt.Controller.Group({page: $tt.Controller.Group.Page.EDIT});
                group.bindUIEvents();
            });
        });
    </script>
{% endblock header %}

{% block sidebarlinks_groups %}class="active"{% endblock %}

{% block content %}
    <div class="col-md-offset-2 col-md-8">
        <div class="row">
            <div class="col-md-12">
                <img class="img-responsive center-block" src="" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {% if group.media[0] is defined %}
                    <div class="tt-media-element">
                        {% include 'IMDCTerpTubeBundle:Media:element.html.twig' with {'mediaFile': group.media[0]} %}
                        <p>Change the media file for the associated forum (image, audio, video):</p>
                    </div>
                {% else %}
                    <p>Add a media file to the associated forum (image, audio, video):</p>
                {% endif %}
                {% include 'IMDCTerpTubeBundle:Media:chooserForm.html.twig' %}
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.visibleToPublic) }}
                {{ form_row(form.visibleToRegisteredUsers) }}
                {{ form_row(form.openForNewMembers) }}
                {{ form_row(form.joinByInvitationOnly) }}
                <button class="btn btn-success"><i class="fa fa-check"></i> Save</button>
                <a class="btn btn-danger" href="{{ path('imdc_group_view', {'groupId': group.id}) }}"><i class="fa fa-times"></i> Cancel</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block outside_body %}
    {{ parent() }}

    {% include 'IMDCTerpTubeBundle:Media:uploadForms.html.twig' %}
{% endblock outside_body %}
