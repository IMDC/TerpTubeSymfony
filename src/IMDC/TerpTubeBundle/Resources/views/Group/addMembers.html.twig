{% extends 'IMDCTerpTubeBundle:Base:base.html.twig' %}

{% block title %}Add Members to Group{% endblock %}

{% block header %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            require(['main'], function() {
                var group = new $tt.Controller.Group({page: $tt.Controller.Group.Page.ADD_MEMBERS});
                group.bindUIEvents();
            });
        });
    </script>
{% endblock header %}

{% block sidebarlinks_groups %}class="active"{% endblock %}

{% block content %}
    <div class="col-md-offset-1 col-md-10">
        <div class="row">
            <div class="col-md-6">
                <a class="btn btn-default" onclick="history.back();"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
            <div class="col-md-6 text-right">
                {% if is_granted('EDIT', group) %}
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle group-action" data-toggle="dropdown" data-loading-text="Working...">Action <span class="caret"></span></button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('imdc_group_edit', {'groupId': group.id}) }}"><i class="fa fa-edit"></i> Edit Group</a></li>
                            <li><a href="{{ path('imdc_group_delete', {'groupId': group.id}) }}"><i class="fa fa-times"></i> Delete Group</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('imdc_forum_new', {'groupId': group.id}) }}"><i class="fa fa-plus"></i> Create Forum</a></li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <img class="img-responsive center-block" src="" />
            </div>
        </div>
        <!-- group members -->
        <div class="row">
            <div class="col-md-12">
                <hr class="tt-separator-top" />
                {% if nonMembers|length > 0 %}
                    {% include 'IMDCTerpTubeBundle:Member:thumbnail.html.twig' with {'members': nonMembers, 'isSelection': true} %}
                    <button class="btn btn-success" id="addSelected" style="margin-bottom: 15px;" data-loading-text="Adding members...">Add Selected</button>
                    {{ knp_pagination_render(nonMembers) }}
                {% else %}
                    <p class="text-center" style="margin-bottom: 20px;">No members to add</p>
                {% endif %}
                <hr class="tt-separator-bottom" />
            </div>
        </div>
    </div>
{% endblock content %}

{% block outside_body %}
    {{ parent() }}

    <div id="selectedUsersForm" style="display: none;">
        {{ form_start(form) }}
        <div class="selected-users" data-prototype="{{ form_widget(form.users.vars.prototype)|e }}"></div>
        {{ form_end(form) }}
    </div>
{% endblock outside_body %}
