{% extends 'IMDCTerpTubeBundle:_Base:base.html.twig' %}

{% trans_default_domain 'IMDCTerpTubeBundle' %}

{% block title %}Edit Avatar{% endblock title %}

{% block content %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-success"><i class="fa fa-check"></i> Upload</button>
                <button class="btn btn-danger"><i class="fa fa-times"></i> Cancel</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
