{% trans_default_domain 'IMDCTerpTubeBundle' %}

{% block motionMedia %}
	<audio	class="preview" id="{{ mediaFile.getID }}" preload="auto">
		<source src="{{ asset(mediaFile.getResource.getWebPathWebm) }}"/>
		<source src="{{ asset(mediaFile.getResource.getWebPath) }}"/>
	</audio>

	<script type='text/javascript'>
		context{% if isPost is defined and isPost %}Post{% endif %}.mediaChooser.previewVideo();
 </script>
{% endblock motionMedia %}
