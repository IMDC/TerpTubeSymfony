{% extends "IMDCTerpTubeBundle:Default:basetemplate.html.twig" %}

{% block stylesheets %}
    {{  parent() }}

    <link href="{{ asset('bundles/imdcterptube/css/threads.css') }}" rel="stylesheet" />
{% endblock stylesheets %}

{% block title %}Confirm thread delete?{% endblock title %}

{% block sidebarlinks_pages %}class="active"{% endblock %}

{% block herounit_wrap %}
{% endblock herounit_wrap %}

{% block underherounitrow1 %}
<div class="col-md-9">
  {# {{ form(form) }} #}
      
    {# count the posts all the threads in this forum #}  
    {% set postCount = thread.posts|length %}

    <h2 style="color: red;">Are you sure you want to delete this topic?</h2>
    <h4>
    {% if postCount == 0 %}
        This thread has <em>no</em> posts.
    {% else %}
        This thread contains a total of <span class="label">{{ postCount }}</span> posts.
    {% endif %}
    </h4>
    <h3>Deleting this forum will delete ALL posts!</h3>
    <p>
        <span style="font-size:150%;" class="btn btn-danger">This action <strong>CANNOT</strong> be undone!</span>
    </p>

    <div class="well">
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {% if thread.mediaIncluded[0] is defined %}
        {% set mediaFile = thread.mediaIncluded[0] %}
        <div class="row">
            <div class="col-md-4">
            {{ include('IMDCTerpTubeBundle:Media:mediaElement.html.twig') }}
            </div> <!-- /col-md-4 -->
        </div> <!-- /row -->
        {% endif %}

{#         {{ form_row(form.title, {'attr':{'class':'input-xxlarge'}}) #}
        <div class="row">
            <h3>{{ thread.title }}</h3>
        </div>
        
        <div class="row">
            {{ form_widget(form.submit, {'attr' : {'style':'display:none'}}) }}
            <button id="forum-form-submit-button" class="btn btn-success" href="#"><i class="fa fa-check"></i> Delete</button>
            <a id="forum-form-cancel-button" class="btn btn-danger" href="javascript: history.go(-1)"><i class="fa fa-times"></i> Cancel</a>
        </div>
    {{ form_end(form) }}
  </div>

</div>
{% endblock underherounitrow1 %}

