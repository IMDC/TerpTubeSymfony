<div class="row">
   <div class="col-md-2" id="avatar-wrap">
       <a href="{{ path('imdc_profile_user', {'userName':thread.creator.getUserName()} ) }}"><img class="avatar" alt="avatar" title="" src="{{ thread.creator.getProfile().avatar ? asset(thread.creator.getProfile().avatar.getResource.getWebPath):asset('bundles/imdcterptube/img/no_avatar.jpg')}}" /></a>
   </div> <!-- /avatar-wrap -->
   <div class="col-md-10" id="thread-creator-info-wrap">
       <a href="{{ path('imdc_profile_user', {'userName':thread.creator.getUserName()} ) }}">{{ thread.creator.getUserName() }}</a>
       <p>
            <ul class="unstyled inline thread-creator-tools-wrap">
                <li>
                    {% if app.user.getId == thread.creator.getId %}
                    {% set thisistheuser = true %}
                    <i class="fa fa-envelope" style="color:gray"></i>
                    {% else %}
                    <a href="{{ path('imdc_message_new_user', {'userid':thread.creator.getUserName()}) }}"><i class="fa fa-envelope"></i></a>
                    {% endif %}
                </li>
                <li>
                    {% if thisistheuser is defined %}
                    <i class="fa fa-heart" style="color:gray"></i>
                    {% elseif app.user.isUserOnFriendsList(thread.creator) %}
                    <i class="fa fa-heart" style="color:green" title="Already friends"></i>
                    {% else %}
                    <a href="{{ path('imdc_member_friend_add', {'userid':thread.creator.getId} ) }}"><i class="fa fa-heart"></i></a>
                    {% endif %}
                </li>
           </ul>
       </p>    
       <p>Joined: {{ thread.creator.getJoinDate()|date('M j Y') }}</p>
       <p>Posts: {{ thread.creator.getPostCount() }}</p>
   </div> <!--  /thread-creator-info-wrap -->
</div> <!-- /row -->
