{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<p>
    <div class="not-registered">
    		<span>{{ 'security.login.not_registered' |trans({}, 'IMDCTerpTubeBundle') }} </span><a class="btn" href="{{ path('fos_user_registration_register') }}">{{ 'security.login.register_here' |trans({}, 'IMDCTerpTubeBundle') }}</a>
    </div>
</p>

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username"><i class="fa fa-user"></i> {{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username" />

    <label for="password"><i class="fa fa-key"></i> {{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" placeholder="Secret Password" />

    <label class="checkbox" for="remember_me">{{ 'security.login.remember_me'|trans }}
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    </label>

    <input type="submit" class="btn btn-success span2" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    
    <p>
        <div class="forgot-password">
    		<span>{{ 'security.login.forgot_password' |trans({}, 'IMDCTerpTubeBundle') }} </span><a href="{{ path('fos_user_resetting_request') }}">{{ 'security.login.password_reset' |trans({}, 'IMDCTerpTubeBundle') }}</a>
    	</div>
	</p>
</form>
{% endblock fos_user_content %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function() {
    $("input#username").focus();
});

</script>

{% endblock javascripts %}