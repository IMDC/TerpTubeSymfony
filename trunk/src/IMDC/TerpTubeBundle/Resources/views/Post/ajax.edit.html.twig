{% extends 'IMDCTerpTubeBundle:Post:view.html.twig' %}

{% block post_content %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form.attachedFile) }}
            {% if form.startTime is defined %}
                {{ form_widget(form.startTime) }}
                {{ form_widget(form.endTime) }}
            {% endif %}
            {{ form_row(form.content) }}
            <button class="btn btn-success post-submit-edit" href="#" data-pid="{{ post.id }}" data-loading-text="Editing post..."><i class="fa fa-check"></i> Edit</button>
            <a class="btn btn-danger post-cancel-edit" href="#" data-pid="{{ post.id }}"><i class="fa fa-times"></i> Cancel</a>
            {{ form_end(form) }}
            <script type="text/javascript">
                require('core/helper', function (Helper) {
                    Helper.autoSize();
                });
            </script>
        </div>
    </div>
{% endblock post_content %}

{% block post_tools %}
{% endblock %}

{% block post_reply %}
{% endblock %}
